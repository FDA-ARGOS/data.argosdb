// examples how to define different annotation from genbank records, from VCF files and from HIVE QC pipelines
// FROM GENBANK
/*
 	  gene            238..21527
                     /gene="ORF1ab"
     CDS             join(238..13440,13440..21527)
                     /gene="ORF1ab"
                     /ribosomal_slippage
                     /codon_start=1
                     /product="ORF1ab polyprotein"
                       
*/
[
    {
        "seqID" : {
 		    "id": "OK394248",
			"version": 1, 
			"db": "genbank", 
			"source": "NCBI"
 		},
 		"source" : {
 			"url": "https://www.ncbi.nlm.nih.gov/"
 		},
 		"range": [ 
            {"start" :238, "end": 21527} 
 		],
        "features": [
            {
				"feature": "gene",
				"tags": [ 
					{ "tag": "gene", "value": "ORF1ab"} 
				]
            }
        ]
	},
	{
        "seqID" : {
 		    "id": "OK394248",
			"version": 1, 
			"db": "genbank", 
			"source": "NCBI"
 		},
 		"source" : {
 			"url": "https://www.ncbi.nlm.nih.gov/"
 		},
 		"range": [ 
            {"start" :238, "end": 13440},
            {"start" :13440, "end": 21527}
 		],
 		"features": {
    			"feature": "CDS",
				"tags": [ 
					{ "tag": "gene", "value": "ORF1ab"},
					{ "tag": "ribosomal_slippage"},
					{ "codon_start": 1},
					{ "tag": "product", "value" : "ORF1ab polyprotein"}
				]
            }
 		]
 		
	}
	
]
 
// example how to define annotation from VCF record
// FROM VCF
/*
#CHROM POS     ID        REF ALT    QUAL FILTER INFO                              FORMAT      NA00001        NA00002        NA00003
20     14370   rs6054257 G      A       29   PASS   NS=3;DP=14;AF=0.5;DB;H2           GT:GQ:DP:HQ 0|0:48:1:51,51 1|0:48:8:51,51 1/1:43:5:.,.
*/

[
    {
        "seqID" : {
 		    "id": "NC_000020",
			"version": 11, 
			"db": "genbank", 
			"source": "NCBI" 
 		},
 		"source" : {
 			"url": "https://www.ncbi.nlm.nih.gov/"
 		},
 		"range": [ 
            {"start" :14370, "end": 14370 } 
 		],
        "features": [
            {
				"feature": "ID",
				"value": "rs6054257"
            },
			{
				"feature": "REF",
				"value": "G"
            },
			{
				"feature": "ALT",
				"value": "A"
            },
			{
				"feature": "QUAL",
				"value": "29"
            },
			{
				"feature": "FILTER",
				"tags": [ 
					{ "tag": "NS", "value": 3},
					{ "tag": "DP", "value": 14},
					{ "tag": "AF", "value": 0.5},
					{ "tag": "DB"},
					{ "tag": "H2"}
				]
            }
 		]	
	}
	
]



